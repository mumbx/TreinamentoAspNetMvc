@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>
<br /><br />

@if (ViewBag.Mensagem != null)
{<div class="alerta"> @ViewBag.Mensagem</div>}

@using (Html.BeginForm("Login", "Admin", "Post"))
{
    <div class="form-group">
        @Html.Label("Nome:") <br /> @Html.TextBox("Nome")
    </div>
    <div class="form-group">
        @Html.Label("Senha:") <br />
        @Html.TextBox("Senha")
    </div>
    <div class="form-group">
        <input type="submit" value="Enviar" />
    </div>
}